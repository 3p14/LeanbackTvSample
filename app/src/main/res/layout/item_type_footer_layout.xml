<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px292">

    <com.github.isuperred.widgets.ScaleConstraintLayout
        android:id="@+id/cl_back_to_top"
        android:layout_width="@dimen/px262"
        android:layout_height="@dimen/px72"
        android:layout_marginTop="@dimen/px60"
        app:scale_mode="ZOOM_FACTOR_MEDIUM"
        android:background="@drawable/selector_focus_bg_corner24"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cl_look_around"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_to_top"
            android:layout_width="@dimen/px56"
            android:layout_height="@dimen/px56"
            android:layout_marginStart="@dimen/px36"
            android:src="@drawable/back_to_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_back_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px20"
            android:gravity="start|center"
            android:text="回到顶部"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/px30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_back_to_top"
            app:layout_constraintTop_toTopOf="parent" />


    </com.github.isuperred.widgets.ScaleConstraintLayout>

    <com.github.isuperred.widgets.ScaleConstraintLayout
        android:id="@+id/cl_look_around"
        android:layout_width="@dimen/px262"
        android:layout_height="@dimen/px72"
        android:layout_marginStart="@dimen/px20"
        app:scale_mode="ZOOM_FACTOR_MEDIUM"
        android:background="@drawable/selector_focus_bg_corner24"
        app:layout_constraintLeft_toRightOf="@+id/cl_back_to_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cl_back_to_top">

        <ImageView
            android:id="@+id/iv_look_around"
            android:layout_width="@dimen/px56"
            android:layout_height="@dimen/px56"
            android:layout_marginStart="@dimen/px36"
            android:src="@drawable/look_around"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_look_around"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px20"
            android:gravity="start|center"
            android:text="随心看"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/px30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_look_around"
            app:layout_constraintTop_toTopOf="parent" />

    </com.github.isuperred.widgets.ScaleConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px94"
        android:text="没有找到想看的？试试随心看吧"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>